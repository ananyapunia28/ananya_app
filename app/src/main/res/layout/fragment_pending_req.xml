<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.PendingReqFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bck2"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView

            android:id="@+id/imgv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:elevation="150dp"
            android:focusable="true"
            android:src="@drawable/ic_undraw_accept_request_re_d81h" />

        <TextView
            android:id="@+id/rtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/recent"
            android:text="Pending Transactions"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/imgv"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_pending" />

        <RelativeLayout
            android:layout_marginTop="10dp"
        android:layout_below="@id/recent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundbg">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroundbg"
                android:scrollbars="none">

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/trview"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    tools:listitem="@layout/checkdec" />-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/c1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:elevation="40dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="35dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">


                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="6dp"
                                android:layout_toRightOf="@id/image"
                                android:text="AmexDemo_Borrower"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/srname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/name"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="4dp"
                                android:layout_toRightOf="@id/image"
                                android:text="Rs. 300"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/image"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/backgrnd"
                                android:gravity="center"
                                android:text="A"
                                android:textColor="@color/white"
                                android:textSize="25sp" />

                            <ImageView
                                android:id="@+id/mov"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24" />



                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </ScrollView>


    </RelativeLayout>

    </RelativeLayout>

</FrameLayout>