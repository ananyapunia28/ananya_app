<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/wlcm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/kavachh" />

        <TextView
            android:id="@+id/sgnup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wlcm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Create Profile"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_below="@id/sgnup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sgnup">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="40dp"
                    app:boxStrokeWidth="4dp"
                    app:boxStrokeColor="@color/black">

                    <EditText
                        android:id="@+id/fnameInput"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="First Name"
                        android:inputType="textMultiLine" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:layout_toRightOf="@id/fname"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    >

                    <EditText
                        android:id="@+id/lnameInput"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="Last Name"
                        android:inputType="textMultiLine" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cno"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@id/fname"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_settings_phone_24" />

                        <EditText
                            android:id="@+id/cnoInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon1"
                            android:hint="Contact No."
                            android:inputType="number"
                            android:maxLength="10" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/upi"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@id/cno"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_speaker_phone_24" />

                        <EditText
                            android:id="@+id/upoInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon2"
                            android:hint="Upi Id"
                            android:inputType="text" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/accno"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@id/upi"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_account_balance_wallet_24" />

                        <EditText
                            android:id="@+id/accnoInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon3"
                            android:hint="Account No."
                            android:inputType="number"
                            android:maxLength="18" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/register"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/accno"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttonbg"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>



        </ScrollView>
    </RelativeLayout>

</layout>