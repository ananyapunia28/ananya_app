<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/wlcm"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/kavachh" />

        <TextView
            android:id="@+id/sgnup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wlcm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_below="@id/sgnup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sgnup">

                <androidx.cardview.widget.CardView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_person_24" />

                        <EditText
                            android:id="@+id/usernameInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon1"
                            android:hint="Username"
                            android:inputType="textMultiLine" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/email"
                    android:layout_below="@id/username"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_email_24" />

                        <EditText
                            android:id="@+id/emailInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon2"
                            android:hint="E-mail"
                            android:inputType="textMultiLine" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/password"
                    android:layout_below="@id/email"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:cardCornerRadius="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/username" />

                        <EditText
                            android:id="@+id/passwordInput"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/icon3"
                            android:hint="Password"
                            android:inputType="textPassword" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttonbg"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="20sp" />



            </RelativeLayout>



        </ScrollView>
        <TextView
            android:id="@+id/made"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="Made in"
            android:textSize="17dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/night"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_nights_stay_24"
            android:layout_toRightOf="@id/made"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/night"
            android:text="By Hackygirls"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </RelativeLayout>

</layout>